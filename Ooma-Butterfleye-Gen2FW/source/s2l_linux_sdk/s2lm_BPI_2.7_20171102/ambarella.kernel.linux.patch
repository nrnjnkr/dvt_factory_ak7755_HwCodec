+	lp->tx.desc_tx[entry].status |= ETH_TDES0_OWN;
+	amba_writel(lp->regbase + ETH_DMA_TX_DESC_LIST_OFFSET,
+		(u32)lp->tx_dma_desc + (entry * sizeof(struct ambeth_desc)));
+	if (netif_msg_tx_err(lp)) {
