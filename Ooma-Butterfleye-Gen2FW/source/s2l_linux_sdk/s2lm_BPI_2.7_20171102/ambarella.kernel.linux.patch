+static inline u32 ambhw_hashtable_crc(unsigned char *mac)
+{
+	unsigned char tmpbuf[ETH_ALEN];
+	int i;
+	u32 crc;
+
+	for (i = 0; i < ETH_ALEN; i++)
+		tmpbuf[i] = bitrev8(mac[i]);
+	crc = crc32_be(~0, tmpbuf, ETH_ALEN);
+
+	return (crc ^ ~0);
+}
