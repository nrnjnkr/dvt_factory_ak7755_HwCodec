+	int ret;
+	unsigned int rdata;
+
+	wlen = 1;
+	rlen = 1;
+	tx[0] = (unsigned char)(0x7F & reg);
+
+	//akdbgprt("*****[AK7755] %s reg = %0x, tx[0]=%0x, %d, %d\n",__FUNCTION__, reg,  tx[0],wlen,rlen);
+
+	if (ak7755_data->control_type == SND_SOC_SPI) {
