+		gpio_set_value_cansleep(lp->pwr_gpio, !lp->pwr_gpio_active);
+	if (gpio_is_valid(lp->rst_gpio))
+		gpio_set_value_cansleep(lp->rst_gpio, lp->rst_gpio_active);
+
+ambeth_drv_suspend_exit:
