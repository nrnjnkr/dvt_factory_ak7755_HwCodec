+	memcpy(ndev->dev_addr, saddr->sa_data, ndev->addr_len);
+	ambhw_set_hwaddr(lp, ndev->dev_addr);
+	ambhw_get_hwaddr(lp, ndev->dev_addr);
+
+	spin_unlock_irqrestore(&lp->lock, flags);
+
+	return 0;
