+static int ak7755_reg_cmd(REG_CMD *reg_param, int len)
+{
+	int i;
+	int rc;
+	int  addr, value;
+
+	akdbgprt("*****[AK7755] %s len = %d\n",__FUNCTION__, len);
+
+	rc = 0;
+	for (i = 0; i < len; i++) {
+		addr = (int)(reg_param[i].addr);
+		value = (int)(reg_param[i].data);
+
+		if ( addr != 0xFF ) {
+			rc = snd_soc_write(ak7755_data->codec, addr, value);
+			if (rc < 0) {
+				break;
+			}
+		}
+		else {
+			mdelay(value);
+		}
+	}
+
+	if (rc != 0 ) rc = 0;
+
+	return(rc);
+
+}
