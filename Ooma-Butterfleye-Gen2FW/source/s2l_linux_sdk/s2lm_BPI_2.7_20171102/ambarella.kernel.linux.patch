+static int ambeth_stop(struct net_device *ndev)
+{
+	struct ambeth_info *lp = netdev_priv(ndev);
+	int ret_val = 0;
+
+	netif_stop_queue(ndev);
+	napi_disable(&lp->napi);
+	free_irq(ndev->irq, ndev);
+	ambeth_phy_stop(lp);
+	netif_carrier_off(ndev);
+	ambeth_stop_hw(ndev);
+
