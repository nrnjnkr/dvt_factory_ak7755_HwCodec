+static int calc_CRC(int length, u8 *data )
+{
+
+#define CRC16_CCITT (0x1021)
+
+	unsigned short crc = 0x0000;
+	int i, j;
+
+	for ( i = 0; i < length; i++ ) {
+		crc ^= *data++ << 8;
+		for ( j = 0; j < 8; j++) {
+			if ( crc & 0x8000) {
+				crc <<= 1;
+				crc ^= CRC16_CCITT;
+			}
+			else {
+				crc <<= 1;
+			}
+		}
+	}
+
+	akdbgprt("[AK7755] %s CRC=%x\n",__FUNCTION__, crc);
+
+	return crc;
+}
