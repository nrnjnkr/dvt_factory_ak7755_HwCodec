+
+	if (ret < 0) {
+		akdbgprt("\t[AK7755] %s error ret = %d\n",__FUNCTION__, ret);
+		rdata = -EIO;
+		return rdata;
+	}
+	else {
+		rdata = (unsigned int)rx[0];
+		if (ak7755_read_reg_cache(codec, reg) != rdata)
+			ak7755_write_reg_cache(codec, reg, rdata);
